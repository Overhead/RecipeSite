<h1>User index page</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>id</th>
			<th>provider</th>
			<th>uid</th>
		</tr>
	</thead>
	<tbody>
		<% @user.all.each do |user| %>
		<tr>
			<td> <%= user.name %> </td>
			<td> <%= user.id %> </td>
			<td> <%= user.provider %> </td>
			<td> <%= user.uid %> </td>
			<td>
				<%= link_to 'Show', user_path(user) %>
				<span> | </span>
				<%= link_to 'Edit', edit_user_path(user) %>
				<span> | </span>
				<%= link_to 'Destroy', user_path(user),
												method: :delete,
												data: { confirm: "Are you sure?" } %>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>
<%= link_to 'Create User', new_user_path %>
