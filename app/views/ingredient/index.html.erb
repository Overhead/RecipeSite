<h1>Ingredient index page</h1>

<table>
	<thead>
		<tr>
			<th>Name</th>
			<th>Description</th>
		</tr>
	</thead>
	<tbody>
		<% @ingredient.all.each do |ingredient| %>
		<tr>
			<td> <%= ingredient.title %> </td>
			<td> <%= ingredient.description %> </td>
			<td>
				<%= link_to 'Show', ingredient_path(ingredient) %>
				<span> | </span>
				<%= link_to 'Edit', edit_ingredient_path(ingredient) %>
				<span> | </span>
				<%= link_to 'Destroy', ingredient_path(ingredient),
												method: :delete,
												data: { confirm: "Are you sure?" } %>
			</td>
		</tr>
		<%end%>
	</tbody>
</table>
<%= link_to 'Create ingredient', new_ingredient_path %>
